<?xml version="1.0" encoding="iso-8859-1"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
	<name>VikRentCar Itinerary</name>
	<author>Alessio Gaggii - Extensionsforjoomla.com</author>
	<creationDate>January 2014</creationDate>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>tech@extensionsforjoomla.com</authorEmail>
	<authorUrl>www.extensionsforjoomla.com</authorUrl>
	<version>1.8</version>
	<description>Module to Show the Itinerary of a Search made with VikRentCar 1.7 or newer</description>
 
	<files>
		<filename module="mod_vikrentcar_itinerary">mod_vikrentcar_itinerary.php</filename>
		<filename>helper.php</filename>
		<filename>mod_vikrentcar_itinerary.css</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>

	<languages>
		<language tag="en-GB">languages/en-GB/en-GB.mod_vikrentcar_itinerary.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">		
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
				<field name="" type="spacer" default="" label="" description="" />

				<field name="timeformat" type="list" default="1" label="Time Format" description="Choose between 12 or 24 hours">
					<option value="1">24 Hours</option>
					<option value="2">12 Hours (AM-PM)</option>
				</field>

				<field name="layout" type="modulelayout" label="Module Layout" description="Select a layout file for the module. Leave Default if you are not sure." />

			</fieldset>
		</fields>
	</config>
</extension>

